<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.collections.FXCollections?>

<?import java.lang.String?>
<VBox alignment="TOP_RIGHT" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="700.0" prefWidth="900.0" spacing="10.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.HistoryViewController">
    <children>
        <HBox alignment="CENTER_RIGHT" spacing="10.0">
            <children>
                <ComboBox fx:id="statusFilterComboBox" promptText="فیلتر بر اساس وضعیت">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="" />
                            <String fx:value="submitted" />
                            <String fx:value="unpaid and cancelled" />
                            <String fx:value="waiting vendor" />
                            <String fx:value="cancelled" />
                            <String fx:value="finding courier" />
                            <String fx:value="on the way" />
                            <String fx:value="completed" />
                        </FXCollections>
                    </items>
                </ComboBox>
                <Button fx:id="applyFiltersButton" text="اعمال فیلترها" onAction="#applyFilters" />
                <Button fx:id="clearFiltersButton" text="پاک کردن فیلترها" onAction="#clearFilters" />
            </children>
        </HBox>
        <TableView fx:id="ordersTable" prefHeight="830.0" prefWidth="2000.0">
            <columns>
                <TableColumn fx:id="deliveryAddressColumn" prefWidth="150.0" text="آدرس تحویل" />
                <TableColumn fx:id="restaurantColumn" prefWidth="100.0" text="رستوران" />
                <TableColumn fx:id="payPriceColumn" prefWidth="100.0" text="مبلغ کل (تومان)" />
                <TableColumn fx:id="createdAtColumn" prefWidth="100.0" text="زمان ایجاد" />
                <TableColumn fx:id="statusColumn" prefWidth="100.0" text="وضعیت سفارش" />
                <TableColumn fx:id="deliveryStatusColumn" prefWidth="100.0" text="وضعیت تحویل" />
                <TableColumn fx:id="itemsColumn" prefWidth="200.0" text="آیتم‌ها" />
                <TableColumn fx:id="ratingColumn" prefWidth="100.0" text="ثبت نظر" />
            </columns>
        </TableView>
    </children>
</VBox>
