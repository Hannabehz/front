<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox maxHeight="Infinity" maxWidth="Infinity" spacing="10" style="-fx-background-color: green;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.CartViewController">
    <children>
        <TextField fx:id="deliveryAddressField" promptText="آدرس تحویل را وارد کنید" HBox.hgrow="ALWAYS" />
        <TableView fx:id="cartTable" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="nameColumn" prefWidth="100.0" text="غذا" />
                <TableColumn fx:id="imageColumn" prefWidth="150.0" text="تصویر" />
                <TableColumn fx:id="descriptionColumn" prefWidth="150.0" text="توضیحات" />
                <TableColumn fx:id="priceColumn" prefWidth="100.0" text="قیمت" />
                <TableColumn fx:id="supplyColumn" prefWidth="100.0" text="موجودی" />
                <TableColumn fx:id="categoriesColumn" prefWidth="150.0" text="دسته‌بندی‌ها" />
                <TableColumn fx:id="quantityColumn" prefWidth="75.0" text="تعداد" />
                <TableColumn fx:id="actionColumn" prefWidth="100.0" text="عملیات" />
            </columns>
        </TableView>
        <HBox spacing="10" style="-fx-background-color: green;">
            <children>
                <Label prefHeight="38.0" prefWidth="102.0" style="-fx-background-color: white;" text="مبلغ کل:" />
                <Label fx:id="totalPriceLabel" alignment="CENTER" contentDisplay="CENTER" prefHeight="38.0" prefWidth="102.0" style="-fx-background-color: white;" text="0" textAlignment="CENTER" />
                <Button fx:id="submitOrder" mnemonicParsing="false" onAction="#submitOrder" prefHeight="26.0" prefWidth="186.0" text="ثبت سفارش">
                    <HBox.margin>
                        <Insets left="20.0" top="10.0" />
                    </HBox.margin>
                </Button>
                <Button fx:id="topUpWalletButton" mnemonicParsing="false" onAction="#topUpWallet" prefHeight="30.0" prefWidth="110.0" text="شارژ کیف پول">
                    <HBox.margin>
                        <Insets left="20.0" top="10.0" />
                    </HBox.margin>
                </Button>
            </children>
        </HBox>
    </children>
</VBox>