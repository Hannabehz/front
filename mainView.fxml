<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_RIGHT" prefHeight="900.0" prefWidth="1540.0" spacing="10" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <HBox id="toolBar" alignment="TOP_RIGHT" prefHeight="70.0" prefWidth="1000.0" style="-fx-background-color: green;">
            <children>
                <MenuButton contentDisplay="RIGHT" mnemonicParsing="false" prefHeight="66.0" prefWidth="43.0" style="-fx-background-color: green;" text="☰" textFill="#faf5f5" wrapText="true">
                    <items>
                        <MenuItem fx:id="showProfileItem" mnemonicParsing="false" onAction="#showProfile" text="نمایش پروفایل" />
                        <MenuItem fx:id="logOutButton" mnemonicParsing="false" onAction="#logOut" text="خروج از حساب کاربری" />
                        <MenuItem fx:id="viewShoppingCartButton" mnemonicParsing="false" onAction="#viewShoppingCart" text="مشاهده سبد خرید" />
                        <MenuItem fx:id="topUpWallet" mnemonicParsing="false" onAction="#topUpWallet" text="شارژ کیف پول" />
                        <MenuItem fx:id="viewOrderHistoryButton" mnemonicParsing="false" onAction="#viewOrderHistory" text="مشاهده تاریخچه سفارش‌ها" />
                        <MenuItem fx:id="favoritesMenuItem" mnemonicParsing="false" onAction="#showFavorites" text="نمایش رستوران‌های مورد علاقه" />
                    </items>
                    <font>
                        <Font size="10.0" />
                    </font>
                </MenuButton>
            </children>
        </HBox>
        <HBox alignment="CENTER" spacing="10.0" style="-fx-padding: 10;">
            <children>
                <TextField fx:id="searchField" promptText="جستجوی رستوران..." />
                <ToggleButton fx:id="fastFoodToggle" text="فست‌فود" toggleGroup="$categoryToggleGroup" />
                <ToggleButton fx:id="iranianToggle" text="ایرانی" toggleGroup="$categoryToggleGroup" />
                <ToggleButton fx:id="italianToggle" text="ایتالیایی" toggleGroup="$categoryToggleGroup" />
            </children>
        </HBox>
        <Button fx:id="backButton" text="بازگشت به صفحه اصلی" visible="false" onAction="#goBackToMain" style="-fx-background-color: white;" />
        <ListView fx:id="restaurantListView" prefHeight="760.0" prefWidth="2000.0" />
    </children>
    <fx:define>
        <ToggleGroup fx:id="categoryToggleGroup" />
    </fx:define>
</VBox>